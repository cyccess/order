@model IEnumerable<ShoppingCartViewModel>
@{
    ViewData["Title"] = "我的购物车";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                商品名称
            </th>
            <th>
                单价
            </th>
            <th>
                数量
            </th>
            <th>
                小计
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div style="width:200px;float:left;overflow:hidden;">
                    <a asp-action="Details" asp-controller="SellGoods" asp-route-id="@item.Id">@item.GoodsName</a>
                </div>
              
                <div style="float:left;">规格:@Html.DisplayFor(modelItem => item.GoodsSepc)</div>
            </td>
            <td>
                9.9
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsSepc)
            </td>

            <td>
                <a class="btn btn-default btn-xs add-cart" data-id="@item.Id">删除</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $(function () {

            $(".add-cart").on("click", function () {
                var id = $(this).data("id");
                $.post("/sellgoods/AddCart", { goodsId:id }, function (data) {
                    $.notify({
                        message: data.message,
                        icon: 'pe-7s-check',
                    }, {
                            type: "success",
                            placement: {
                                from: "top",
                                align: "center"
                            },
                            delay: 2000
                        });
                });
            });
        })
    </script>
}