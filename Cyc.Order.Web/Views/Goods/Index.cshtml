@model Sakura.AspNetCore.IPagedList<Cyc.Order.Data.DataModel.Goods>

@{
    ViewData["Title"] = "商品管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create" class="btn btn-success">新加商品</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                商品名称
            </th>
            <th>
                商品条码
            </th>
            <th>
                品牌
            </th>
            <th>
                规格
            </th>
            <th>
                单位
            </th>
            <th>
                添加时间
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsSepc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsUnit)
            </td>
            <td>
                @item.AddTime.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">修改</a> |
                <a asp-action="Details" asp-route-id="@item.Id">详情</a> |
                <a class="delete" data-id="@item.Id" href="javascript:;">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        <pager generation-mode="ListOnly" />
    </ul>
</div>
@section Scripts{ 
    <script>
        $(function () {

            $(".delete").on("click", function () {
                var id = $(this).data("id");
                swal({
                    title: '确定删除吗？',
                    text: "删除商品后将无法恢复！",
                    type: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: '确定删除',
                    cancelButtonText: '取消'
                }).then(function () {
                    $.post("/goods/delete", { id: id }, function (data) {
                        swal('删除!', data.message, 'success').then(function () {
                            location.reload();
                        });
                    });
                }).catch(swal.noop);
            });
        })
    </script>
}